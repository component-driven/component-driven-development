{
  "name": "component-driven-development",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "homepage": "https://component-driven.github.io/component-driven-development/",
  "dependencies": {
    "@reach/router": "^1.2.1",
    "@rebass/grid": "^6.0.0-4",
    "polished": "^2.3.0",
    "prop-types": "^15.6.2",
    "react": "^16.6.3",
    "react-dom": "^16.6.3",
    "react-group": "^2.0.0",
    "react-modal": "^3.6.1",
    "react-scripts": "2.1.1",
    "stack-styled": "0.1.0",
    "styled-components": "^4.1.1",
    "styled-system": "^3.1.11"
  },
  "scripts": {
    "start": "node scripts/setup.js && styleguidist server --open --exercise",
    "app": "node scripts/setup.js && react-scripts start",
    "build": "node scripts/setup.js && react-scripts build && styleguidist build",
    "pretest": "eslint src",
    "test": "cross-env CI=true react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "posttest": "npm run format",
    "eject": "react-scripts eject",
    "styleguide": "node scripts/setup.js && styleguidist server --open",
    "styleguide:build": "node scripts/setup.js && styleguidist build",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "format": "prettier --write '**/*.{js,md}'",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "babel-plugin-styled-components": "^1.8.0",
    "cross-env": "^5.2.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "gh-pages": "^2.0.1",
    "husky": "^1.2.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.2",
    "react-styleguidist": "^9.0.0-beta3"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix",
      "git add"
    ],
    "*.{js,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
