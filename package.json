{
  "name": "component-driven-development",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "homepage": "https://component-driven.github.io/component-driven-development/",
  "dependencies": {
    "@reach/router": "^1.2.1",
    "@rebass/grid": "^6.0.0-7",
    "date-fns": "^1.30.1",
    "formik": "^1.5.1",
    "polished": "^3.0.0",
    "prop-types": "^15.7.2",
    "react": "^16.8.3",
    "react-dom": "^16.8.3",
    "react-modal": "^3.8.1",
    "react-scripts": "2.1.5",
    "stack-styled": "0.1.0",
    "styled-components": "^4.1.3",
    "styled-system": "^4.0.0"
  },
  "scripts": {
    "validate": "node scripts/setup.js",
    "prestart": "npm run validate",
    "start": "npm run exercise & npm run styleguide",
    "preapp": "npm run validate",
    "app": "react-scripts start",
    "prebuild": "npm run validate",
    "build": "react-scripts build && npm run styleguide:build",
    "pretest": "eslint src",
    "test": "cross-env CI=true react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "posttest": "npm run format",
    "exercise": "styleguidist server --open --exercise",
    "styleguide": "styleguidist server --open",
    "styleguide:build": "styleguidist build",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "format": "prettier --write '**/*.{js,md}'"
  },
  "devDependencies": {
    "babel-plugin-styled-components": "^1.10.0",
    "cross-env": "^5.2.0",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "gh-pages": "^2.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "prettier": "^1.16.4",
    "react-styleguidist": "^9.0.1"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix",
      "git add"
    ],
    "*.{js,md}": [
      "prettier --write",
      "git add"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "husky": {
    "hooks": {
      "precommit": "lint-staged"
    }
  }
}
