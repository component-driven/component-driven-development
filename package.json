{
	"name": "component-driven-development",
	"version": "0.1.0",
	"private": true,
	"license": "MIT",
	"dependencies": {
		"@reach/router": "^1.2.1",
		"@styled-system/prop-types": "^5.0.12",
		"clipboard-copy": "^3.0.0",
		"date-fns": "^1.30.1",
		"formik": "^1.5.2",
		"macro-components": "^2.0.0",
		"polished": "^3.2.0",
		"prop-types": "^15.7.2",
		"react": "^16.8.6",
		"react-dom": "^16.8.6",
		"react-modal": "^3.8.1",
		"react-scripts": "2.1.8",
		"stack-styled": "^2.0.0",
		"styled-components": "^4.3.2",
		"styled-system": "^5.0.12"
	},
	"scripts": {
		"validate": "node scripts/setup.js",
		"prestart": "npm run validate",
		"start": "run-p exercise styleguide",
		"preapp": "npm run validate",
		"app": "react-scripts start",
		"prebuild": "npm run validate",
		"build": "react-scripts build && npm run styleguide:build",
		"pretest": "eslint src",
		"test": "cross-env CI=true react-scripts test --env=jsdom",
		"test:watch": "react-scripts test --env=jsdom",
		"posttest": "npm run format",
		"exercise": "styleguidist server --open --exercise",
		"prestyleguide": "npm run validate",
		"styleguide": "styleguidist server --open",
		"prestyleguide:build": "npm run validate",
		"styleguide:build": "styleguidist build",
		"format": "prettier --write '**/*.{js,md}'"
	},
	"devDependencies": {
		"babel-plugin-styled-components": "^1.10.0",
		"cross-env": "^5.2.0",
		"eslint-plugin-jsx-a11y": "^6.2.1",
		"husky": "^1.3.1",
		"lint-staged": "^8.1.5",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.17.0",
		"react-styleguidist": "^9.1.11"
	},
	"lint-staged": {
		"*.{js}": [
			"eslint --fix",
			"git add"
		],
		"*.{js,json,md}": [
			"prettier --write",
			"git add"
		]
	},
	"browserslist": [
		">0.2%",
		"not dead",
		"not ie <= 11",
		"not op_mini all"
	],
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	}
}
