{
  "name": "component-driven-development",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "homepage": "https://sapegin.github.io/component-driven-development/",
  "dependencies": {
    "grid-styled": "^5.0.2",
    "polished": "^1.9.3",
    "prop-types": "^15.6.1",
    "react": "^16.4.0",
    "react-dom": "^16.4.0",
    "react-group": "^1.0.6",
    "react-modal": "^3.4.5",
    "react-scripts": "1.1.4",
    "styled-components": "^3.3.3",
    "styled-system": "^3.0.1"
  },
  "scripts": {
    "start": "node scripts/setup.js && react-scripts start",
    "build": "node scripts/setup.js && react-scripts build && styleguidist build",
    "pretest": "eslint src",
    "test": "cross-env CI=true react-scripts test --env=jsdom",
    "test:watch": "react-scripts test --env=jsdom",
    "posttest": "npm run format",
    "eject": "react-scripts eject",
    "styleguide": "node scripts/setup.js && styleguidist server --open",
    "styleguide:build": "node scripts/setup.js && styleguidist build",
    "exercise": "node scripts/setup.js && styleguidist server --open --exercise",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "format": "prettier --write '**/*.{js,md}'",
    "precommit": "lint-staged"
  },
  "devDependencies": {
    "chalk": "^2.4.1",
    "cross-env": "^5.1.6",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "gh-pages": "^1.2.0",
    "husky": "^0.14.3",
    "lint-staged": "^7.1.3",
    "node-args": "^2.1.8",
    "prettier": "^1.13.4",
    "react-styleguidist": "^7.1.0"
  },
  "lint-staged": {
    "*.{js}": [
      "eslint --fix",
      "git add"
    ],
    "*.{js,md}": [
      "prettier --write",
      "git add"
    ]
  }
}
